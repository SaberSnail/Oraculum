<ResourceDictionary
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style x:Key="RollResultParagraphStyle" TargetType="{x:Type Paragraph}">
		<Setter Property="FontSize" Value="{DynamicResource DefaultFontSize}" />
		<Setter Property="TextAlignment" Value="Left" />
	</Style>

	<Style x:Key="RollResultValueRunStyle" TargetType="{x:Type Run}">
		<Setter Property="FontWeight" Value="Bold" />
	</Style>

	<Style x:Key="RollResultOutputRunStyle" TargetType="{x:Type Run}">
	</Style>

	<Style x:Key="RollResultTableParagraphStyle" TargetType="{x:Type Paragraph}">
		<Setter Property="FontSize" Value="{DynamicResource LargeFontSize}" />
		<Setter Property="TextAlignment" Value="Left" />
	</Style>

	<Style x:Key="RollResultTableTitleRunStyle" TargetType="{x:Type Run}">
		<Setter Property="FontWeight" Value="Bold" />
	</Style>

</ResourceDictionary>